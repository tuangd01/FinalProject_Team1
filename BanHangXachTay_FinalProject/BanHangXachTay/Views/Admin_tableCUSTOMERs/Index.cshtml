@model IEnumerable<BanHangXachTay.Models.tableCUSTOMER>

@{
    ViewBag.Title = "Index";
}

<h2>Thông tin khách hàng</h2>

<p>
    @Html.ActionLink("Thêm khách hàng mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.tenKH)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.gioitinh)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.sodienthoaiKH)
        </th>

@model IEnumerable<BanHangXachTay.Models.tableBILL>

@{
    ViewBag.Title = "Thông tin đơn hàng";
}

<h4 class="title"><span class="text">Thông tin đơn hàng</span></h4>
<h4>@ViewBag.Message</h4>
@using (Html.BeginForm())
{

    <p>
        Title: @Html.TextBox("SearchString")
        <button class="btn" style="margin-bottom:12px" value="Filter" onclick="javascript:return ShowMessage()">Tìm kiếm</button>
    </p>
}
<p>
    @Html.ActionLink("Thêm mới", "Create")
</p>
<table class="table table-bordered table-condensed table-hover table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.idHD)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.tenKH)
        </th>





        <th>
            @Html.DisplayNameFor(model => model.ngaydathang)
        </th>









        <th>
            @Html.DisplayNameFor(model => model.ghichuBILL)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.idHD)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.tenKH)
            </td>



            <td>
                @Html.DisplayFor(modelItem => item.ngaydathang)
            </td>



            <td>
                @Html.DisplayFor(modelItem => item.ghichuBILL)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.idHD }) |
                @Html.ActionLink("Xem", "Details", new { id = item.idHD }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.idHD })
            </td>
        </tr>
    }

</table>




@model BanHangXachTay.Models.tablePRODUCTofYourCart

@{
    ViewBag.Title = "Edit";
}

<h2>Chỉnh sửa thông tin</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">      
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.idSP)

        <div class="form-group">
            @Html.LabelFor(model => model.tenSP, "Tên sản phẩm", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.tenSP)
                @Html.ValidationMessageFor(model => model.tenSP)
            </div>
        </div>

        

        <div class="form-group">
            @Html.LabelFor(model => model.dongiaSP, "Đơn giá", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.dongiaSP)
                @Html.ValidationMessageFor(model => model.dongiaSP)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.soluongSP, "Số lượng", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.soluongSP)
                @Html.ValidationMessageFor(model => model.soluongSP)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ghichu, "Ghi chú", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ghichu)
                @Html.ValidationMessageFor(model => model.ghichu)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Sửa" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Quay lại", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

        <div class="contact">
            <h1>Trả Lời Liên Hệ</h1>
            <div class="border"></div>
            <form class="contact-form">
                <div class="form-InfoContact">
                    <div class="contact-left">
                        <div class="row-info hoten">
                            <h3 class="left">Tên Người Gửi</h3>
                            <label class="right">@Model.hoTen</label>
                        </div>
                        <div class="row-info chude">
                            <h3 class="left">Chủ Đề</h3>
                            <label class="right">@Model.chuDe</label>
                        </div>
                        <div class="row-info tieude">
                            <h3 class="left">Tiêu Đề</h3>
                            <label class="right">@Model.tieuDe</label>
                        </div>
                    </div>
                    <div class="contact-right">
                        <div class="row-info noidung">
                            <h3 class="left">Nội Dung</h3>
                            <label>@Model.noiDung</label>
                        </div>
                        <div class="bottom-right">
                            <div class="row-info email">
                                <h3 class="left">Email</h3>
                                <label class="right">@Model.email</label>
                            </div>
                            <div class="row-info sdt">
                                <h3 class="left">Số Điện Thoại</h3>
                                <label class="right">@Model.sdt</label>
                            </div>
                        </div>
                    </div>
                </div><!-- form-info -->

                <div class="form-ReplyContact">


                    <div class="form-Reply">
                        <div class="row-reply">
                            <h3 class="left">Trả Lời</h3>
                            <textarea class="reply-admin"></textarea>
                        </div>
                        <div class="row-reply trangthai">
                            <h3 class="left">Trạng Thái</h3>
                            <label class="right">Chua Xem</label>
                            <div class="row-reply">
                                <h3 class="left">Ghi Chú</h3>
                                <textarea class="note-admin"></textarea>
                            </div>
                        </div>
                        <input type="submit" class="send" value="Gửi">
                    </div><!-- form-reply -->
                </div>
            </form>
        </div>


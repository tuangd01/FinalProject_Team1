@model IEnumerable<BanHangXachTay.Models.tablePRODUCT>

@{
    ViewBag.Title = "Index";
}

<h4 class="title"><span class="text">Quản lí sản phẩm</span></h4>
<p>
    @Html.ActionLink("Thêm sản phẩm", "Create")
</p>
<table class="table table-bordered table-hover table-striped table-condensed" >
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.idSP)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tenSP)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.img)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.loaiSP)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.dongiaSP)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.soluongSP)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nhacungcap)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ngaynhap)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ghichuSP)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.idSP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tenSP)
            </td>
            <td>
                <img src="@Url.Action("Image", new { id = item.idSP})" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.loaiSP)
            </td>
            <td>
                @if (item.dongiaSP.HasValue)
                {
                    @item.dongiaSP.Value.ToString("N0")
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.soluongSP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nhacungcap)
            </td>
            <td>
                @if (item.ngaynhap.HasValue)
                {
                    @item.ngaynhap.Value.ToString("dd/MM/yyyy")
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ghichuSP)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.idSP }) |
                @Html.ActionLink("Xem", "Details", new { id = item.idSP }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.idSP })
            </td>
        </tr>
    }

</table>
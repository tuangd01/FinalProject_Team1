@model BanHangXachTay.Models.tablePRODUCT

@{
    ViewBag.Title = "Thông Tin Sản Phẩm";
}

<h2>Chi Tiết Sản Phẩm: @Html.DisplayFor(model => model.tenSP) </h2>




<div>

@model BanHangXachTay.Models.Contact

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Trả Lời Liên Hệ</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Liên hệ</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.idContact)

        <div class="form-group">
            @Html.LabelFor(model => model.hoTen, "Tên Người Gửi", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.hoTen)
                @Html.ValidationMessageFor(model => model.hoTen)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.chuDe, "Chủ Đề", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.chuDe)
                @Html.ValidationMessageFor(model => model.chuDe)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.tieuDe, "Tiêu Đề", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.tieuDe)
                @Html.ValidationMessageFor(model => model.tieuDe)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.noiDung, "Nội dung", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.noiDung)
                @Html.ValidationMessageFor(model => model.noiDung)
            </div>
        </div>



        <div class="form-group">
            @Html.LabelFor(model => model.email, "Email", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.email)
                @Html.ValidationMessageFor(model => model.email)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.sdt, "Số Điện Thoại", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.sdt)
                @Html.ValidationMessageFor(model => model.sdt)
            </div>
        </div>




        <div class="form-group">
            @Html.LabelFor(model => model.traLoi, "Trả Lời", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.traLoi)
                @Html.ValidationMessageFor(model => model.traLoi)
            </div>
        </div>



        <div class="form-group">
            @Html.LabelFor(model => model.ghiChu, "Ghi Chú", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.ghiChu)
                @Html.ValidationMessageFor(model => model.ghiChu)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.trangThai, "Trạng thái", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @if (Model.trangThai.Value)
                { @Html.EditorFor(model => model.trangThai, "Đã Xem")}
                else
                { @Html.EditorFor(model => model.trangThai, "Chưa Xem")}


                @Html.ValidationMessageFor(model => model.trangThai)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
